<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ross.feehan.commentsdvldemoapp" >

    <application
        android:name=".Shared.CommentsDVLDemoAppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CommentsAppTheme" >
        <activity
            android:name=".Features.DisplayComments.DisplayCommentsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Features.PostComments.PostCommentActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
